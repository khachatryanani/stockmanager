
@model WorkerViewModel

<form method="post" asp-controller="Workers" asp-action="CreateWorker" enctype="multipart/form-data">

    <div class="form-group">
        <label class="col-sm-3 control-label">Name</label>
        <input asp-for="name" type="text" class="col-sm-4 form-control" />
        <span asp-validation-for="name"></span>

    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Surname</label>
        <input asp-for="surname" type="text" class="col-sm-4 form-control" />
        <span asp-validation-for="surname"></span>

    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Surname</label>
        <input asp-for="email" type="email" class="col-sm-4 form-control" />
        <span asp-validation-for="email"></span>

    </div>
    <button type="submit" class="btn btn-success">Create Worker</button>
</form>
