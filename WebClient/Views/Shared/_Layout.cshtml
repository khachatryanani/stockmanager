<!DOCTYPE html>
<html xml:lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SportsStore</title>
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>

    <div class="bg-dark text-white p-2" style="background-color: #242E38 !important">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">Hamster Stock Manager</div>
                <div class="col-6 text-right">
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            <a class="btn btn-block btn-outline-secondary"
               onmouseover="this.style.backgroundColor='#FF4C00';"
               onmouseout="this.style.backgroundColor=''"
               asp-action="Index" asp-controller="Stocks">Stock</a>
            <a class="btn btn-block btn-outline-secondary"
               onmouseover="this.style.backgroundColor='#FF4C00';"
               onmouseout="this.style.backgroundColor=''">Orders</a>
            <a class="btn btn-block btn-outline-secondary"
               onmouseover="this.style.backgroundColor='#FF4C00';"
               onmouseout="this.style.backgroundColor=''">Delivery</a>
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
