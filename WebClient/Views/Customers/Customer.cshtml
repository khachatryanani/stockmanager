
@model CustomerViewModel

<form method="post" asp-controller="Customers" asp-action="CreateCustomer" enctype="multipart/form-data">

    <div class="form-group">
        <label class="col-sm-3 control-label">Name</label>
        <input asp-for="name" type="text" class="col-sm-4 form-control" />
        <span asp-validation-for="name"></span>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Address</label>
        <input asp-for="address" type="text" class="col-sm-4 form-control" />
        <span asp-validation-for="address"></span>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Phone</label>
        <input asp-for="phone" type="text" class="col-sm-4 form-control" />
    </div>
    <button type="submit" class="btn btn-success">Create Customer</button>
</form>
<br />
