<UserControl x:Class="FrontEnd_Desktop.MVVM.View.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FrontEnd_Desktop.MVVM.View"
           xmlns:data="clr-namespace:DataAccess;assembly=DataAccess"
             xmlns:model="clr-namespace:FrontEnd_Desktop.MVVM.Model"
             
             mc:Ignorable="d" 
            d:DesignHeight="600" d:DesignWidth="720">
    <Grid Background="#F0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="250" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>

        <Button Name="CreateNewOrderBtn" 
                Content="Create New Order" 
                HorizontalAlignment="Left" 
                Margin="50,65,0,0" VerticalAlignment="Top" 
                Width="115" 
                Height="30"
                Foreground="White"
                Background="#FF4C00"
                Click="CreateNewOrderBtn_Click"/>
        <Button Name="ViewDetailsBtn" 
                Content="View Details"
                HorizontalAlignment="Left" 
                Margin="170,65,0,0" VerticalAlignment="Top" 
                Width="100" 
                Height="30"
                Foreground="White"
                Background="#242E38"
                Click="ViewDetailsBtn_Click"/>
        <ListView x:Name="InStockListView" HorizontalAlignment="Center" 
                  Height="Auto"
                  MaxHeight="450"
                  MaxWidth="650"
                  Margin="0,120,0,0" 
                  VerticalAlignment="Top" 
                  BorderThickness="0"
                  Grid.ColumnSpan="2"
                  Grid.RowSpan="2"
                  Background="Transparent"
                  DataContext="{Binding Order}"
                  ItemContainerStyle="{StaticResource ListViewTheme}">
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="Customer" DisplayMemberBinding="{Binding CustomerName}" Width="Auto"/>
                    <GridViewColumn Header="Total Price" DisplayMemberBinding="{Binding TotalPrice}" Width="Auto"/>
                    <GridViewColumn Header="Received On" DisplayMemberBinding="{Binding ReceivedDate}" Width="Auto"/>
                    <GridViewColumn Header="Received By" DisplayMemberBinding="{Binding ReceivedBy}" Width="Auto"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="Auto"/>
                    <GridViewColumn Header="Delivered On" DisplayMemberBinding="{Binding DeliveryDate}" Width="Auto"/>
                    <GridViewColumn Header="Delivered By" DisplayMemberBinding="{Binding DeliveryBy}" Width="Auto"/>
                </GridView>

            </ListView.View>
        </ListView>
        <Border Name="CreateNewOrderSection"
                Background="#F3F0F0"
                Grid.Column="1"
                Grid.RowSpan="2"
                Visibility="Hidden">
            <Border.Effect>
                <DropShadowEffect Direction="180" 
                                  ShadowDepth="4"
                                  Color="Black"
                                 Opacity="0.6"
                                 BlurRadius="10"/>
            </Border.Effect>

            <Grid>
                <Image Source="/MVVM/View/Close.png" Margin="1,10,231,572" MouseDown="Image_MouseDown"/>
                <Label Content="Customer ID" FontSize="11" HorizontalAlignment="Left" Margin="23,83,0,0" VerticalAlignment="Top" Width="80" Height="22"/>

                <Label Content="Order Date" FontSize="11" HorizontalAlignment="Left" Margin="24,140,0,0" VerticalAlignment="Top" Width="99" Height="24"/>
                <Label Content="Record Created By" FontSize="11" HorizontalAlignment="Left" Margin="25,199,0,0" VerticalAlignment="Top" Width="108" Height="27"/>

                <ComboBox x:Name="WorkersCombo" Height="30" HorizontalAlignment="Center" Margin="0,226,0,0" VerticalAlignment="Top" Width="200"/>

                <DatePicker x:Name="OrderDatePicker" FontSize ="14" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="23,164,0,0" VerticalAlignment="Top" Width="200" Height="30"/>






                <ComboBox x:Name="CustomerCombo" Height="30" HorizontalAlignment="Left" Margin="23,105,0,0" VerticalAlignment="Top" Width="200"/>
                <Button x:Name="SubmitBtn" Background="#8BAB42" 
                        Content="Create New Order" 
                        Foreground="White"
                        HorizontalAlignment="Center" 
                        Height="30" Margin="0,490,0,0" 
                        VerticalAlignment="Top" Width="200" />
                <Button x:Name="CancelBtn" Background="Transparent" BorderThickness="0" Content="Cancel" HorizontalAlignment="Left" Height="30" Margin="73,525,0,0" VerticalAlignment="Top" Width="100" />
                <Label Content="Creating New Order" 
                       HorizontalContentAlignment="Center"
                       FontSize="18" HorizontalAlignment="Left" 
                       Margin="4,33,0,0" VerticalAlignment="Top" 
                       Width="238" Height="36"
                       Foreground="#FF4C00"
                       FontWeight="Bold"/>

                <ListView x:Name="AddItemListView" HorizontalAlignment="Center" 
                  Height="Auto"
                  MaxHeight="450"
                  MaxWidth="650"
                  Margin="0,305,0,0" 
                  VerticalAlignment="Top" 
                  BorderThickness="0"
                  Background="Transparent"
                  DataContext="{Binding Order}"
                  Width="230">
                    <ListView.View>
                        <GridView >
                            <GridViewColumn Header="Product" Width="160">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox Width="140" Height="25" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Quantity" Width="60">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Width="40" Height="25" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>

                    </ListView.View>
                    <ListViewItem Background="Transparent">

                    </ListViewItem>

                </ListView>
                <Border  Background="#F3F0F0" Margin="6,305,0,274"></Border>
                <Label Content="Order Item" FontSize="11" HorizontalAlignment="Left" Margin="18,297,0,0" VerticalAlignment="Top" Width="80" Height="27"/>
                <Button x:Name="AddItemBtn" Background="Transparent" Foreground="Blue" Content="+ add item" HorizontalAlignment="Left" Margin="161,357,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" Width="64" BorderThickness="0"/>
            </Grid>


        </Border>
        <Border x:Name="VieworderDetailsSection"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Background="#F3F0F0"
                Visibility="Visible">
            <Border.Effect>
                <DropShadowEffect Direction="900" 
                                  ShadowDepth="4"
                                  Color="Black"
                                 Opacity="0.6"
                                 BlurRadius="10"/>
            </Border.Effect>
            <Grid>
                <Image Source="/MVVM/View/Close.png"  
                       Margin="689,10,8,220"
                       MouseDown="Image_MouseDown">

                </Image>
                <Button Name="AcceptOrderBtn" 
                Content="Accept Order" 
                HorizontalAlignment="Left" 
                Margin="10,200,0,0" VerticalAlignment="Top" 
                Width="150" 
                Height="30"
                Foreground="White"
                Background="#FF4C00"
                Click="CreateNewOrderBtn_Click"/>

                <Label Content="Order Info" 
                       Margin="10,10,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       FontSize="18" 
                       Width="166" Height="36"
                       Foreground="#FF4C00"
                       FontWeight="Bold"></Label>
                <ListView x:Name="OrderDetailsListView" HorizontalAlignment="Left" 
                  Height="Auto"
                  MaxHeight="450"
                  Width="Auto"
                  Margin="190,40,0,0"
                  VerticalAlignment="Top" 
                  BorderThickness="0"
                  Background="Transparent"
                  ItemContainerStyle="{StaticResource ListViewTheme}">
                    <ListView.View>
                        <GridView >
                            <GridViewColumn Header="Product" DisplayMemberBinding="{Binding ProductName}" Width="80"/>
                            <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Quantity}" Width="80"/>
                            <GridViewColumn Header="Unit Price" DisplayMemberBinding="{Binding Price}" Width="80"/>
                            <GridViewColumn Header="Unit" DisplayMemberBinding="{Binding MeasurementUnit}" Width="80"/>
                            <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="80"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Label Name="CustomerNameLabel" Content="*CustomerName*" 
                    Margin="10,79,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Foreground="#242E38"/>
                <Label Name="OrderTotalLabel" Content="*OrderTotalPrice*" 
                    Margin="10,110,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Foreground="#242E38"/>
                <Label Name="OrderStatusLabel" Content="*OrderStatus*" 
                    Margin="10,140,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Foreground="#242E38"/>
                <Label x:Name="OrderIdLabel" Content="*OrderId*" 
                    Margin="10,48,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Foreground="#242E38"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
