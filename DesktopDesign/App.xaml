<Application x:Class="DesktopDesign.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopDesign"
             xmlns:viewModel="clr-namespace:DesktopDesign.MVVM.ViewModel"   
             xmlns:view ="clr-namespace:DesktopDesign.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>

                <ResourceDictionary Source="Theme/ListViewTheme.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:InStockViewModel}">
                <view:InStockView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:ProductsViewModel}">
                <view:ProductsView/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
